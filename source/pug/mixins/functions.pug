mixin pageHeader(tituloTema, srcImagen, pagina)
    .curso-portada

        .row.align-items-end

            .col-12.col-lg-6

                .curso-container

                    h3#curso-titulo-componente.curso-subtitulo.text-color-orange Manejo integrado de la desnutrición aguda en menor de 5 años.
                    h1#curso-titulo-tema.curso-titulo Clasificación nutricional y toma de medidas antropométricas en niños menores de cinco (5) años.

                    .brand-line-primary

                    if pagina == 'main'

                        .keywords
                            span.badge.badge-pill.badge-brand-light.bg-brand-color-1.mr-2 Indicadores antropométricos
                            span.badge.badge-pill.badge-brand-light.bg-brand-color-2.mr-2 Patrones de referencia
                            span.badge.badge-pill.badge-brand-light.mr-2 Clasificación nutricional


                        .barra-dots.mt-5
                            img.img-fluid(src='assets/images/header/icon_dots.svg', alt='alt')

                    else 
                        p.curso-descripcion El país cuenta con una reglamentación, mediante la cual se adoptan los indicadores antropométricos, patrones de referencia y puntos de corte, para la clasificación antropométrica del estado nutricional de niños, niñas y adolescentes menores de 18 años de edad, adultos de 18 a 64 años de edad y gestantes adultas. En esta unidad, se presentan los aspectos relacionados con la clasificación nutricional, según indicadores antropométricos y toma de medidas antropométricas, aplicables para los niños y niñas menores de cinco (5) años de edad.

                        //p.curso-descripcion El aprendiz podrá identificar los elementos conceptuales relacionados con la atención integral de la primera infancia y nutrición materno infantil desde el sector salud. 
          
                    if pagina == 'home'
                        a.curso-btn-iniciar.btn.btn-light(href="main.html").mb-4
                            span Iniciar curso


            .col-12.col-lg-6.text-center
                .d-none.d-lg-block
                    img(src= srcImagen).curso-imagen


mixin referenciaItem(referencia, enlace, tituloenlace="")
    p= referencia
        if tituloenlace != ""
            a(href= enlace, target="_blank").ml-2= tituloenlace
        else if enlace != ""
            a(href= enlace, target="_blank").ml-2= enlace
    hr



mixin navTemaItem(numero, titulo, ruta)
    li.list-group-item.nav-tema-item
        .row.align-items-center
            if numero == 'play'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-play
            else if numero == 'question'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-question
            else if numero == 'text'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-file-text-o
            else if numero == 'glosario'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-sort-alpha-asc
            else if numero == 'complementario'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-folder-open
            else if numero == 'referencias'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-book
            else
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold= numero

            .col.ml-n2
                span.nav-tema-item__titulo 
                    a(href= ruta)= titulo
            .col-auto                                            
                a(href= ruta).btn.btn-light.nav-tema-item__btn
                    | Ver más
    
    
